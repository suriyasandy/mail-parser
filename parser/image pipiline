def run_easyocr_and_extract_text(image_input):
    import easyocr
    import numpy as np
    from PIL import Image

    reader = easyocr.Reader(['en'])

    # Convert to acceptable input format
    if isinstance(image_input, str):
        # Assume it's a file path
        ocr_result = reader.readtext(image_input)
    elif isinstance(image_input, bytes):
        img = Image.open(BytesIO(image_input))
        ocr_result = reader.readtext(np.array(img))
    elif isinstance(image_input, Image.Image):
        ocr_result = reader.readtext(np.array(image_input))
    elif isinstance(image_input, np.ndarray):
        ocr_result = reader.readtext(image_input)
    else:
        raise ValueError("Unsupported image input format for EasyOCR.")

    return " ".join(ocr_result)
