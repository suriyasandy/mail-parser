from bs4 import BeautifulSoup

def preserve_content_html(html: str) -> str:
    soup = BeautifulSoup(html, "html.parser")

    # Remove non-content metadata tags
    for tag in soup(["style", "script", "head", "meta", "title", "link", "xml"]):
        tag.decompose()

    # DO NOT REMOVE div, p, table, etc.
    # Weâ€™ll extract meaningful content later by analyzing tag structure

    # Remove empty tags
    for tag in soup.find_all():
        if not tag.get_text(strip=True):
            tag.decompose()

    return str(soup)
